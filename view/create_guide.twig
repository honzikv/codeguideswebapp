{% extends 'layout/main_layout.twig' %}

{% block content %}
    <script type="text/javascript" src="js/setTextAreaValue.js"></script>

    <div class="jumbotron mx-auto contentDefault">
        <h1 class="display-4">Create a new guide</h1>
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="guideName">Guide name</label>
                <input type="text" class="form-control" name="guideName" id="guideName"
                       placeholder="Enter name of your guide"
                       value="{{ formData.guideName }}"
                       required>
            </div>


            <div class="form-group">
                <label for="guideAbstract">Brief description (abstract)</label>
                <textarea placeholder="Write your abstract (optional but highly recommended)" class="form-control"
                          id="guideAbstract" rows="10" name="guideAbstract"
                          maxlength="3000"></textarea>
            </div>


            <script type='text/javascript'>
                setTextAreaValue('guideAbstract', '{{ formData.guideAbstract }}');
            </script>

            <label class="mt-4" for="pdfInput">Your PDF File:</label>
            <div class="form-group">
                <input type="file" class="form-control-file" name='pdfFile' accept="application/pdf"
                       id="pdfInput" required>
            </div>

            <hr>

            <div class="container d-flex">
                {% if error %}
                    <p>{{ error }}</p>
                {% endif %}
            </div>
            <button type="submit" class="btn btn-primary float-end">Submit</button>
        </form>
    </div>
{% endblock %}