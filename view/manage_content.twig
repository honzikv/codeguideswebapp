{% extends 'layout/main_layout.twig' %}

{% block content %}
    {% if guides|length == 0 %}
        <p class="lead text-center">No content to manage currently, wait for users to submit their guides...</p>
    {% else %}

        <h1 class="display-4 text-center">Manage Content</h1>
        <table class="table tableAcrylic">
            <thead class="thead-light">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Guide name</th>
                <th scope="col">Author</th>
                <th scope="col">Reviews</th>
            </tr>
            </thead>

            <tbody>
            {% set i = 1 %}
            {% for guide in guides %}

            <tr class="elementHoverLight">
                <th scope="row">{{ i }}</th>
                <td>
                    <a href="/guide?guideId={{ guide.guide_id }}">{{ guide.name }}</a>
                </td>
                <td>{{ guide.username }}</td>

                <td>
                    <a href="/managereviews?guideId={{ guide.guide_id }}" class="btn btn-primary">Manage Reviews</a>
                </td>

                {% set i = i + 1 %}
                {% endfor %}

            </tbody>
        </table>
    {% endif %}

{% endblock %}