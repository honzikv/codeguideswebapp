<h1 class="display-4">Review of "<span class="text-primary">{{ guide.name }}</span>"</h1>
<p>Reviews in progress: {{ reviews|length }}</p>
<table class="table tableDarkAcrylic table-responsive">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Reviewer</th>
        <th scope="col">Action</th>
        <th scope="col">Info</th>
        <th scope="col">Theme</th>
        <th scope="col">Orig</th>
        <th scope="col">Qual</th>
        <th scope="col">Overall</th>
    </tr>
    </thead>

    <tbody>
    {% for i in 1..3 %}
        <tr>
            <th scope="row">{{ i }}</th>
            {% if reviews[i] is defined %}
                {% set review = reviews[i] %}

                {% if review.is_finished == true %}
                    <td>{{ review.username }}</td>
                    <td>{{ review.info_score }}</td>
                    <td>{{ review.theme_score }}</td>
                    <td>{{ review.originality_score }}</td>
                    <td>{{ review.quality_score }}</td>
                    <td>{{ review.overall_score }}</td>
                {% else %}
                    <td>{{ review.username }}</td>
                    <td>
                        <button class="btn btn-danger">Remove</button>
                    </td>
                    <td>{{ 'In progress' }}</td>
                    <td>{{ 'In progress' }}</td>
                    <td>{{ 'In progress' }}</td>
                    <td>{{ 'In progress' }}</td>
                    <td>{{ 'In progress' }}</td>
                    <td>{{ 'In progress' }}</td>
                {% endif %}
            {% endif %}
            <td>
                <select id="userSelection{{ i }}" class="form-control form-control-sm">
                    {% for reviewer in reviewers %}
                        <option value="{{ reviewer.id }}">{{ reviewer.username }}</option>
                    {% endfor %}
                </select>
            </td>
            <td>
                <button onclick="createReview(
                        'userSelection{{ i }}', '{{ i }}', '{{ guide.id }}', '{{ guide.name }}'
                        )"
                        class="btn btn-primary">
                    Add to Review
                </button>
            </td>
            <td>{{ '-' }}</td>
            <td>{{ '-' }}</td>
            <td>{{ '-' }}</td>
            <td>{{ '-' }}</td>
            <td>{{ '-' }}</td>
        </tr>
    {% endfor %}
    </tbody>

</table>

<script src="js/manageReviews.js"></script>