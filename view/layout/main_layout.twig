<!DOCTYPE html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href='bootstrap/css/bootstrap.min.css'/>
    <link rel="stylesheet" href="css/main.css"/>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <title>Coding Guides WebApp</title>
</head>
<body>

<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top ">
        <div class="navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a href="/" class="nav-link
                        {% if view == 'index.twig' %}
                            text-warning
                        {% endif %}"
                    >Home</a>
                </li>
                <li class="nav-item">

                    <a href="/guidelist" class="nav-link">Guides</a>
                </li>

                {% if user.role == 'author' or user.role == 'reviewer' %}
                    <li class="nav-item">
                        <a href="/myguides" class="nav-link">My Guides</a>
                    </li>
                {% endif %}

                {% if user.role == 'reviewer' %}
                    <li class="nav-item">
                        <a href="/myreviews" class="nav-link">My Reviews</a>
                    </li>
                {% endif %}

                {% if user.role == 'publisher' %}
                    <li class="nav-item">
                        <a href="/manageusers" class="nav-link">Manage Users</a>
                    </li>

                    <li class="nav-item">
                        <a href="/managecontent" class="nav-link">Manage Content</a>
                    </li>
                {% endif %}

            </ul>

            <ul class="navbar-nav ml-auto">
                {% if not user %}
                    <li class="nav-item">
                        <a href="/register" class="nav-link">Register</a>
                    </li>

                    <li class="nav-item">
                        <a href="/login" class="nav-link">Login</a>
                    </li>

                {% endif %}

                {% if user %}
                    <li class="nav-link ">Logged in as: {{ user.username }} ({{ user.role }})</li>
                    <li class="nav-item">
                        <a href="/logout" class="nav-link">Logout</a>
                    </li>
                {% endif %}
            </ul>

        </div>
    </nav>
</header>
<div class="container-fluid contentDefault mt-4">
    {% block content %}
    {% endblock %}
</div>

</body>
