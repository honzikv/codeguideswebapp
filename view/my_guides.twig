{% extends 'layout/main_layout.twig' %}

{% block content %}

    <h1 class="display-3">Your Guides</h1>

    <table class="table tableAcrylic">
        <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Guide Name</th>
            <th scope="col">File name</th>
            <th scope="col">State</th>
        </tr>
        </thead>

        <tbody>
        {% set i = 1 %}
        {% for guide in guides %}

            <tr class="elementHoverLight">
                <th scope="row">{{ i }}</th>
                <td>{{ guide.name }}</td>
                <td>{{ guide.filename }}</td>
                <td>{{ guide.state }}</td>
            </tr>

            {% set i = i + 1 %}
        {% endfor %}

        </tbody>
    </table>

{% endblock %}